<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.financial.dao.UserDao">
	<!-- 插入 -->
	<insert id="insertUser" parameterType="com.financial.entity.User"
		keyProperty="id">
		insert into user(age,name)values
		(#{age},
		#{name})
	</insert>
	<!-- 查询 -->
	<select id="getUsers" resultType="com.financial.entity.User">
		select * FROM user
	</select>
	<!-- 根据id查找单个用户 -->
	<select id="findUserById" parameterType="int" resultType="com.financial.entity.User">
		select * from user where id=#{id}
	</select>
	<!-- 更新 -->
	<update id="updateUser" parameterType="com.financial.entity.User">
		update user set name=#{name},age=#{age} where id=#{id}
	</update>
	<!-- 删除 -->
	<delete id="deleteUser" parameterType="int">
		delete from user where id=#{id}
	</delete>
</mapper>
